{
    "pylint.args": [
        "--variable-naming-style=camelCase",
        "--function-naming-style=camelCase",
        "--disable=W0718",
        "--disable=C0116", // docstring
        "--max-line-length=120"
    ],
    "python.linting.pylintArgs": [
        "--init-hook",
        "import sys, os; sys.path.insert(0, os.path.join('app'))"
    ],
    "flake8.args": [
        "--max-line-length=250",
        "--ignore=E231,E301,E302,E252",
    ],
    "cSpell.words": [
        "apikey",
        "Clasess",
        "dateutil",
        "DDTHH",
        "fontawesome",
        "javascripts",
        "osys",
        "playsound",
        "restx",
        "SQLALCHEMY"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.pyc": {"when": "$(basename).py"}, 
        "**/__pycache__": true,
    },
}